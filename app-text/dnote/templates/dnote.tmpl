EAPI=7

inherit go-module

DESCRIPTION="Dnote is a simple command line notebook for programmers"
HOMEPAGE="https://github.com/dnote/dnote"

EGO_SUM=(
{{gosum}})

go-module_set_globals

SRC_URI="{{artifacts[0].src_uri}}
	${EGO_SUM_SRC_URI}"

LICENSE="GPL3"
SLOT="0"
KEYWORDS="*"

S="${WORKDIR}/${PN}-{{tag_name}}"

src_unpack() {
	go-module_src_unpack
}

src_compile() {
	go build -mod=mod -tags="fts5" ./pkg/cli || die "compile failed"
}

src_install() {
	mv cli ${PN}
	dobin ${PN}
	dodoc README.md
}

